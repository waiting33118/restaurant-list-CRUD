<div class="container my-5">
  <a href="/">
    <i class="fas fa-long-arrow-alt-left"></i>
    Back to HomePage
  </a>
  <h2 class="text-center mb-5">修改餐廳明細</h2>
  <form action="/restaurants/{{item._id}}?_method=put" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputName">餐廳名稱<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputName" name="name" value="{{item.name}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputName_en">餐廳英文名稱<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputName_en" name="name_en" value="{{item.name_en}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputCategory">餐廳種類<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputCategory" name="category" value="{{item.category}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputImage">餐廳圖片連結</label>
        <input type="url" class="form-control" id="inputImage" value="{{item.image}}" name="image">
      </div>
      <div class="form-group col-md-6">
        <label for="inputLocation">餐廳地址<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputLocation" name="location" value="{{item.location}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPhone">餐廳連絡電話<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputPhone" name="phone" value="{{item.phone}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputGoogle_map">餐廳GoogleMap<span class="text-danger">*</span></label>
        <input type="url" class="form-control" id="inputGoogle_map" placeholder="請填入URL" name="google_map"
          value="{{item.google_map}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputGoogle_map_iframe">餐廳GoogleMap Iframe連結<span class="text-danger">*</span></label>
        <input type="url" class="form-control" id="inputGoogle_map_iframe" placeholder="請填入URL" name="google_map_iframe"
          value="{{item.google_map_iframe}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputRating">餐廳評分<span class="text-danger">*</span></label>
        <input type="number" class="form-control" id="inputRating" name="rating" value="{{item.rating}}"
          placeholder="1~5分" min="1" max="5" step="0.5" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputDescription">餐廳說明<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="inputDescription" name="description" value="{{item.description}}"
          required>
      </div>
    </div>
    <button type="submit" class="btn btn-outline-success btn-block mt-5">完成修改</button>
  </form>
</div>